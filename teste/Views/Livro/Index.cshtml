@model IEnumerable<teste.DATA.Models.Livro>

@{
    ViewData["Title"] = "Index";
}
<h1>Livros</h1>
<p>
    <a class="btn btn-primary" asp-action="Create"> <i class="fa fa-plus-circle"></i> Novo Livro</a>
</p>
<table id="myTable" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Autor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Editora)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>
                    @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Autor)
                    </td>
                    <td>
                    @Html.DisplayFor(modelItem => item.Editora)
                    </td>
                  
                    <td class="row">
                        <a asp-action="Edit" class="btn btn-primary m-1" asp-route-id="@item.IdLivro"><i class="Alterar"></i></a>
                        <a asp-action="Details" class="btn btn-success m-1" asp-route-id="@item.IdLivro"><i class="Detalhes"></i></a>


                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-danger mr-1" data-toggle="modal" data-target="#DeleteModal-@item.IdLivro">
                            <i class="fa fa-trash"></i>
                        </button>

                        <!-- Modal -->
                        <div class="modal fade" id="DeleteModal-@item.IdLivro" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="DeleteModalLabel">Excluir livro</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        Deseja realmente excluir o livro @item.Titulo ?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary " data-dismiss="modal">Não</button>
                                        <a asp-action="Delete" class="btn btn-danger " asp-route-id="@item.IdLivro">Sim</a>
                                    </div>
                                </div>
                            </div>
                        </div>


                    </td>
                </tr>
        }
    </tbody>
</table>

@section Scripts {

<script>
        let table = new DataTable('#myTable');

</script>
}
