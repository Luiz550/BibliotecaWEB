@model teste.DATA.Models.Cliente

@{
    ViewData["Title"] = "Edit";
}

<h1>Alterar dados do cliente</h1>

<h4>Altere os dados abaixo</h4>
<hr />
<div>

    <a class="btn btn-primary" asp-action="Index">Voltar</a>
</div>
<br/>
<div class="row">
    <div class="col-md">
        <form asp-action="Edit">
                 <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                 <div hidden class="form-group col-md">
                    <label asp-for="IdCliente" class="control-label"></label>
                    <input asp-for="IdCliente" class="form-control" />

                 </div>



                 <div class="card"> 
                   <div class="card-header">Informações Pessoais</div>
                   <div class ="card-body">

                      <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                      </div>
                  </div>
                   </div>
                    <div class="card">
                        <div class="card-header"> Endereço</div>
                        <div class="card-body">

                                <div class="form-group">
                                <label asp-for="Endereço" class="control-label"></label>
                                <input asp-for="Endereço" class="form-control" />
                                <span asp-validation-for="Endereço" class="text-danger"></span>
                                </div>
                            </div>


                        </div>
                        <br />
                          <div class="card">
                            <div class="card-header"> Contato</div>
                            <div class="card-body">

                           <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" />
                            <span asp-validation-for="Endereço" class="text-danger"></span>
                          </div>
                         </div>
                         </div>

                        <div class="form-group">
                            <input type="submit" value="Incluir" class="btn btn-success" />
                        </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
